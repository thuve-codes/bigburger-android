<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/apphead">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="69dp"
            android:layout_height="46dp"
            android:src="@drawable/bblogopng" />

        <TextView
    android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BIG BURGER"
            android:textColor="@color/Apptheme"
            android:textColorHighlight="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/bauhausregular"
            />

        <ImageView
            android:layout_width="69dp"
            android:layout_height="46dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/cart"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Experience the taste of perfection with our mouthwatering burgers,
handcrafted with love and the finest ingredients. At Burger Master, every bite is a celebration of flavor."
        android:textColor="@color/black"
        android:textColorHighlight="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/timesnewromanitalic"/>

    <TextView
        android:id="@+id/textred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text='"Black Burger, Black Friday, Big Burger Big Savings!"'
        android:textColor="#FF0000"
        android:fontFamily="@font/chiller"
        android:textSize="20sp"
        android:textFontWeight="@integer/material_motion_duration_medium_1"/>
        />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#2C2C2C"
    android:gravity="center_horizontal"
    android:layout_marginTop="30dp">
    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ Black Friday Mega Offer! ⭐"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎁 Get Incredible Deals from Dec 26 to Jan 15 📦"
        android:textSize="16sp"
        android:textColor="#9E9E9E"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <!-- Highlighted Text -->
    <TextView
        android:id="@+id/offerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up to 30% Off on Selected Items!"
        android:textSize="20sp"
        android:textColor="#FFD700"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- CTA Description -->
    <TextView
        android:id="@+id/ctaDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎁 Shop Now &amp; Save Big – Limited Time Only!"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Button -->
    <Button
        android:id="@+id/shopNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFD700"
        android:text="Shop Now"
        android:textColor="#000000"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Cantact us"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>